root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.html]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 2

[*.{scss,less,css}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
